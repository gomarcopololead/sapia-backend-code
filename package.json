    "mongodb-memory-server": "^6.7.6",
    "mongoose": "^5.10.5",
    "morgan": "^1.10.0",
    "morgan-body": "^2.5.0",
    "swagger-routes-express": "^3.2.1",
    "swagger-ui-express": "4.1.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "validator": "^13.1.1",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/supertest": "^2.0.10",
    "jest": "^26.4.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2"
  },
  "config": {
    "mongodbMemoryServer": {
      "downloadDir": "mongodb/binaries",
      "platform": "linux",
      "arch": "x64",
      "version": "3",
      "debug": "1",
      "downloadMirror": "url",
      "disablePostinstall": "1",
      "systemBinary": "/usr/local/bin/mongod",
      "md5Check": "1"
    }
  }
}
