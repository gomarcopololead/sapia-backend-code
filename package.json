  "author": "Alex Losikov",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ENV_FILE=./config/.env.prod node -r tsconfig-paths/register ./bin/app.js --unhandled-rejections=strict",
    "dev": "ENV_FILE=./config/.env.dev ts-node -r tsconfig-paths/register ./src/app.ts --unhandled-rejections=strict",
    "test:unit": "ENV_FILE=./config/.env.test jest"
  },
  "dependencies": {
    "@types/async": "^3.2.14",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv-parse-variables": "^0.2.0",
    "@types/express": "4.17.13",
    "@types/faker": "^5.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "^13.1.0",
    "@types/yamljs": "^0.2.31",
    "async": "^3.2.4",
    "bcrypt": "^5.0.0",
    "connect": "^3.7.0",
    "dotenv-extended": "^2.8.0",
    "dotenv-parse-variables": "^0.3.1",
    "express": "^4.17.3",
    "express-openapi-validator": "^3.16.7",
